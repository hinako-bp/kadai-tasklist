<% if logged_in? %>
  <h1>タスク一覧</h1>

  <ul>
    <% @tasks.each do |task| %>
      <li><%= link_to task.id, task %> :<%= task.status %> &gt; <%= task.content %></li>
    <% end %>
  </ul>
  
  <%= link_to '新規タスクの追加', new_task_path %>
  <%= link_to 'ログアウト', logout_path, method: :delete %>
  
<%= paginate @tasks %>
  
<% else %>

  <%= link_to 'アカウント登録', signup_path %>
  <%= link_to 'ログイン', login_path %>
  
<% end %>