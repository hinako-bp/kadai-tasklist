<h1>ログイン</h1>

<%= form_with(url: login_path, scope: :session, local: true) do |f| %>
<ul style="list-style:none;">

    <li>
        <%= f.label :email, 'メールアドレス' %>
        <%= f.email_field :email %>
    </li>
    
    <li>
        <%= f.label :password, 'パスワード' %>
        <%= f.password_field :password %>
    </li>
    
    <li><%= f.submit 'ログイン' %></li>
</ul>
<% end %>

<p>アカウントをお持ちでない方⇒<%= link_to '新規登録', signup_path %></p>